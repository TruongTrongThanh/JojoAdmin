{
  "compilerOptions": {
    "outDir": "./app/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "target": "esnext",
    "esModuleInterop": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./src/main/**/*",
    "./src/types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}